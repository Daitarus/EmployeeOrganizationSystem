<Window x:Class="EmployeeOrganizationSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeOrganizationSystem"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0.8*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1">
            <TextBlock Text="Первое число" />
            <TextBox Text="{Binding Num1, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="Второе число" />
            <TextBox Text="{Binding Num2, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="Сумма" />
            <TextBox Text="{Binding ResultNum, Mode=OneWay}" IsReadOnly="True" />
            <Button Command="{Binding ChangeTypeOperation}">
                <TextBlock Text="{Binding ButtonText}"/>
            </Button>
        </StackPanel>
    </Grid>
</Window>
